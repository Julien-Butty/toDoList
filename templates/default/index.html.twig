{% extends 'base.html.twig' %}

{% block header_title %}
    <div class="mt-3">
    <h1>Bienvenue sur Todo List, l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h1>
    </div>
{% endblock %}

{% block body %}

    <div class="row justify-content-between mt-4">
        <a href="{{ path('task_create') }}" class="btn btn-success m-sm-2">Créer une nouvelle tâche</a>
        <a href="{{ path('task_list') }}" class="btn btn-info m-sm-2">Consulter la liste des tâches à faire</a>
        <a href="{{ path('task_done') }}" class="btn btn-secondary m-sm-2">Consulter la liste des tâches terminées</a>
    </div>
{% endblock %}
