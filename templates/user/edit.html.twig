{% extends 'base.html.twig' %}

{% block header_title %}<h1 class="flex-row text-center text-md-left">Modifier l'utilisateur : <strong>{{ user.username }}</strong></h1>{% endblock %}
{% block header_img %}
    <img class="slide-image rounded" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">
{% endblock %}

{% block body %}
    <div class="row justify-content-between mt-4 mb-5 border rounded pt-4 pb-4">
        <div class="col-12 col-md-6 form-group">
            {{ form_start(form, {'action' : path('user_edit', { 'id' : user.id })}) }}
            <div class="col-12 col-md-6 ">
                {{ form_row(form.username) }}
            </div>
            <div class="col-12 col-md-6 ">
                {{ form_row(form.plainPassword) }}
            </div>
            <div class="col-12 col-md-6 ">
                {{ form_row(form.email) }}
            </div>
        </div>
        <div class="col-12 col-md-6 justify-content-center form-group">
            <div class="col-12 col-md-6 ">
                {{ form_row(form.roles) }}
            </div>
            <div class="col-12 col-md-6 ">
                {{ form_row(form.active) }}
            </div>
        </div>
        <div class="col-12 col-md-4 ">
            <button type="submit" class=" col-12 btn btn-success pull-right">Modifier</button>
        </div>

        {{ form_errors(form) }}
        {{ form_end(form) }}
    </div>
    <hr>
{% endblock %}
