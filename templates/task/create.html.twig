{% extends 'base.html.twig' %}
 {% block header_title %}<h1 class="flex-row text-center text-md-left">Créer une tâche</h1>{% endblock %}
{% block header_img %}
    <img class="slide-image rounded" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">
{% endblock %}
{% block body %}
    <div class="  mt-4 mb-5 border rounded pt-4 pb-4">
        <div class="col-12 col-md-6 form-group">
            {{ form_start(form, {'action' : path('task_create')}) }}
            <div class="col-12  ">
                {{ form_row(form.title) }}
            </div>
            <div class="col-12  ">
                {{ form_row(form.content) }}
            </div>
            {{ form_widget(form) }}
            <div class="col-12 col-md-8 align-content-md-center">
                <button type="submit" class="btn btn-success pull-right">Ajouter</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    </div>
    <hr>
{% endblock %}
