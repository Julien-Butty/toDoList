{% extends 'base.html.twig' %}

{% block header_img %}<img class="slide-image rounded" src="{{ asset('img/todolist_content.jpg') }}"
                           alt="todo list">{% endblock %}

{% block body %}
    <div class="flex-row">
        <a href="{{ path('task_create') }}" class="btn btn-warning pull-right">Créer une tâche</a>
    </div>
    </br>
    <div class="row">
        {% for task in tasks %}
            <div class=" col-12 col-xl-4 mb-3">
                <div class="card">

                        <div class="d-flex justify-content-between card-header">
                            <h6 class="card-title"><a
                                        href="{{ path('task_edit', {'id' : task.id }) }}">{{ task.title|length >20 ? task.title|slice(0,20) ~ '...': task.title }}</a>
                            </h6>
                            <h5 class="">
                                {% if task.isDone %}<i class="fas fa-check text-success"></i>{% else %}<i
                                        class="fas fa-circle-notch text-danger"></i>{% endif %}
                            </h5>
                        </div>
                    <div class="card-body">
                        <p class="card-subtitle">{{ task.content }}</p>
                        {% if task.user != null %}
                            <p> auteur: {{ task.user.username }}</p>
                        {% else %}
                            <p> auteur: anonyme</p>
                        {% endif %}

                        <div>

                            <div class="d-flex justify-content-between">
                                <a href="{{ path('task_toggle', {'id' : task.id }) }}">
                                    <button class="btn btn-primary btn-sm mr-2">
                                        {% if not task.isDone %}Marquer comme faite{% else %}Marquer non terminée{% endif %}
                                    </button>
                                </a>
                                <a action="{{ path('task_delete', {'id' : task.id }) }}">
                                    <button class="btn btn-danger btn-sm ">Supprimer</button>
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                Il n'y a pas encore de tâche enregistrée. <a href="{{ path('task_create') }}"
                                                             class="btn btn-warning pull-right">Créer une tâche</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
